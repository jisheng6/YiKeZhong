<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_gen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:jieke="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#03A9F4">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/tan"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/sliding_touxiang"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:text="推荐"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.jish.yikezhong.retrofit.MyViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/radioGroup"/>
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tuijian"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/home_tuijian"
                    android:textColor="@drawable/textcolor"
                    android:text="推荐"
                    android:gravity="center"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/duanzi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/home_duanzi"
                    android:textColor="@drawable/textcolor"
                    android:gravity="center"
                    android:text="段子"
                    />

                <RadioButton
                    android:id="@+id/shipin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:drawableTop="@drawable/home_shipin"
                    android:textColor="@drawable/textcolor"
                    android:text="视频"
                    />
            </RadioGroup>
            <com.hjm.bottomtabbar.BottomTabBar
                android:layout_alignParentBottom="true"
                android:id="@+id/bottom_tab_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

<RelativeLayout
    android:background="#ffffff"
    android:layout_gravity="left"
    android:id="@+id/linear_drawer"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/slidingbeijing">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/circleImageView"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/sliding_touxiang"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="椰汁奶茶"/>
        <ImageView
            android:layout_marginTop="85dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/female"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="编辑个性签名"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#ffffff"
        android:textSize="15dp"/>
</LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/line"
        android:layout_marginTop="20dp"
        android:padding="25dp"
        android:id="@+id/guanzhu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/my_takecare"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:textColor="#000000"
            android:text="我的关注"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sliding_xiangyou"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/guanzhu"
        android:padding="25dp"
        android:id="@+id/shoucang"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/my_collection"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="我的收藏"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sliding_xiangyou"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/shoucang"
        android:padding="25dp"
        android:id="@+id/sousuo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/search_friend"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="搜索好友"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sliding_xiangyou"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/sousuo"
        android:padding="25dp"
        android:id="@+id/tongzhi"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/messages"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="消息通知"
            android:textColor="#000000"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sliding_xiangyou"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/tongzhi"
        android:layout_marginTop="150dp"
           android:id="@+id/yejian"
           android:padding="25dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/night_colse"/>
           <TextView
               android:id="@+id/night"
               android:textColor="#000000"
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="夜间模式"/>
        <com.jish.yikezhong.retrofit.SwitchButton
            android:layout_alignParentRight="true"
            android:id="@+id/sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            jieke:bmHeight="50dp"
            jieke:bmWidth="50dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/directory"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="我的作品"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/settings"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="设置"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
        </RelativeLayout>
</android.support.v4.widget.DrawerLayout>